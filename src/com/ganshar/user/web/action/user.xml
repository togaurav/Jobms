<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="users" extends="default"
		namespace="/user">
		<action name="tologin"
			class="com.ganshar.user.web.action.UserAction" method="tologin">
			<interceptor-ref name="baseStack"/>
			<result name="success" >/login.jsp</result>
		</action>
		
		<action name="toregister"
			class="com.ganshar.user.web.action.UserAction" method="toregister">
			<interceptor-ref name="baseStack"/>
			<result name="success" >/user/register.jsp</result>
		</action>
		<action name="login"
			class="com.ganshar.user.web.action.UserAction" method="login">
			<interceptor-ref name="baseStack"/>
			<result name="success" type="redirect">/main.jsp</result>
		</action>
		
		<action name="register"
			class="com.ganshar.user.web.action.UserAction" method="register">
			<interceptor-ref name="baseStack"/>
			<result name="success" type="redirect">/login.jsp</result>
		</action>
		
		<action name="logout"
			class="com.ganshar.user.web.action.UserAction" method="logout">
			<interceptor-ref name="baseStack"/>
			<result name="success" type="redirect">/index.jsp</result>
		</action>
	</package>

</struts>